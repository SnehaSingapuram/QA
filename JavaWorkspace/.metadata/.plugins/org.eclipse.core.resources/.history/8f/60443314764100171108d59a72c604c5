package samplelocalvarprgm;

public class Test {
	
	//declaring a local variable 
	public static void pupage()
	{
	int	age = 0;
		age = age+1;
		System.out.println("My puppy age is" +age);
	}

	public static void main(String[] args) {
		//Using the above declared local variable in the main function by calling pupage() through object
		Test test = new Test();
		test.pupage();
		

	}

}
